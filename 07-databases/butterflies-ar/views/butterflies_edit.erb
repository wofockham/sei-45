<h1>Edit Butterfly</h1>

<form action="/butterflies/<%= @butterfly["id"] %>" method="post">
  <label>
    Name:
    <input name="name" placeholder="Red admiral" required value="<%= @butterfly["name"] %>">
  </label>

  <label>
    Family:
    <input name="family" placeholder="Nymphalidae" value="<%= @butterfly["family"] %>">
  </label>

  <label>
    Image:
    <input name="image" type="url" placeholder="http://..." value="<%= @butterfly["image"] %>">
  </label>

  <label>
    Larval plant:
    <select name="plant_id">
      <option></option>
      <% Plant.all.each do |plant| %>
        <option value="<%= plant.id %>" <%= "selected" if plant.id == @butterfly.plant_id %>><%= plant.name %></option>
      <% end %>
    </select>
  </label>

  <button>Update butterfly</button>
</form>
